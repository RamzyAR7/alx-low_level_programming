CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

all:$(NAME)

$(NAME):$(OBJ)
	$(CC) $(OBJ) -o $@

$(OBJ): $(SRC) m.h
	$(CC) $(CFLAGS) -c -o $@ $(@:.o=.c)

clean:$(RM)
	$< -f *~ $(NAME)

oclean:$(RM)
	$< -f $(OBJ)

fclean:clean oclean

re: oclean all
.PHONY: all clean oclean fclean re
